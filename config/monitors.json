{
  "defaults": {
    "branch": "main",
    "enabled": true
  },

  "templates": {
    "minecraft_mod_lang": {
      "paths": ["src/main/resources/assets/{modid}/lang/en_us.json"]
    },
    "minecraft_mod_generated": {
      "paths": ["src/generated/resources/assets/{modid}/lang/en_us.json"]
    }
  },

  "batch": [
  ],

  "monitors": [
    {
      "name": "FTB Stuff",
      "repo": "FTBTeam/FTB-Stuff-Things",
      "template": "minecraft_mod_generated",
      "vars": { "modid": "ftbstuff" }
    },
    {
      "name": "FTB Pack Companion",
      "repo": "FTBTeam/FTB-Pack-Companion",
      "template": "minecraft_mod_generated",
      "vars": { "modid": "ftbpc" }
    },
    {
      "name": "GAG",
      "repo": "MaxNeedsSnacks/gag",
      "branch": "1.21.1",
      "template": "minecraft_mod_generated",
      "vars": { "modid": "gag" }
    },
    {
      "name": "Gateways",
      "repo": "Shadows-of-Fire/GatewaysToEternity",
      "branch": "1.21",
      "template": "minecraft_mod_lang",
      "vars": { "modid": "gateways" }
    }
  ],

  "settings": {
    "email_subject_prefix": "[Lang-Monitor]",
    "email_sender_name": "Lang-Monitor"
  }
}
